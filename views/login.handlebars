<div class="card m-3 border-info" style="max-width: 36rem;">
    <label class="d-block py-2 px-3 text-white bg-info">Login</label>
    <form id="login-form" class="m-2">
        <div class="form-group">
            <label class="p-2 text-info" for="Username">Username</label>
            <input type="text" class="form-control p-2" id="username">
        </div>
        <div class="form-group">
            <label class="p-2 text-info">Password</label>
            <input type="password" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-success my-3">Login</button>
        <br>
        <a href="/signup"><label class="px-1 pb-2"><u>Sign Up Instead</u></label></a>
    </form>
</div>
